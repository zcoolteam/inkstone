<?xml version="1.0" encoding="utf-8"?>
<com.zcool.inkstone.ext.widget.SystemInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:systemInsetPaddingBottom="all"
    app:systemInsetPaddingLeft="all"
    app:systemInsetPaddingRight="all"
    app:systemInsetPaddingTop="all">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zcool.inkstone.ext.widget.pulllayout.PullLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pull_position="left"
            app:pull_threshold="50dp">

            <Button
                android:id="@+id/item_view_dialog_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="view dialog 1" />

            <com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <include layout="@layout/okandroid_ptr_header_default_view" />
            </com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader>
        </com.zcool.inkstone.ext.widget.pulllayout.PullLayout>

        <com.zcool.inkstone.ext.widget.pulllayout.PullLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pull_position="right"
            app:pull_threshold="50dp">

            <Button
                android:id="@+id/item_view_dialog_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="view dialog 2" />

            <com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <include layout="@layout/okandroid_ptr_header_default_view" />
            </com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader>
        </com.zcool.inkstone.ext.widget.pulllayout.PullLayout>

        <com.zcool.inkstone.ext.widget.pulllayout.PullLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pull_position="top"
            app:pull_threshold="20dp">

            <Button
                android:id="@+id/item_view_dialog_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="view dialog 3" />

            <com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <include layout="@layout/okandroid_ptr_header_default_view" />
            </com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader>
        </com.zcool.inkstone.ext.widget.pulllayout.PullLayout>

        <com.zcool.inkstone.ext.widget.pulllayout.PullLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pull_position="bottom"
            app:pull_threshold="20dp">

            <Button
                android:id="@+id/item_view_dialog_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="view dialog 4" />

            <com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <include layout="@layout/okandroid_ptr_header_default_view" />
            </com.zcool.inkstone.ext.widget.pulllayout.header.SimplePullHeader>
        </com.zcool.inkstone.ext.widget.pulllayout.PullLayout>
    </LinearLayout>
</com.zcool.inkstone.ext.widget.SystemInsetsFrameLayout>